<div class="row input">
    <div class="col-xs-12">
        <label class="field-label">Specialty</label>
        <div class="input">
            {{single-select
                content=specialties
                prompt="Choose specialty"
                optionLabelPath="specializationName"
                optionValuePath="specializationId"
                selection=contact.specialty
                classNameBindings=":dropdown"
                hasError=false
                tooltipMsg= 'Please choose a specialty.'
                isTooltipVisible= false
                tooltipPlacement='right'
                data-element="care-team-form-specialty"
                disabled=disabled}}
        </div>
    </div>
</div>
