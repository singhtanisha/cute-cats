<p>
    <span>Describe your difficulty paying for the very basics like food, housing, medical care, and heating</span>
    {{#if content.showUndo}}
        <a role="link" data-element="undo-button" class="box-margin-Lmd-v2" onclick={{action undo content}}>Undo</a>
    {{/if}}
</p>
{{#radio-button-group name="financialResourceStatus" selectedValue=content.optionGuid disabled=isNotAllowedToEdit as |group|}}
    {{#each demographicOptions.financialResourceStatusOptions as |option index|}}
        {{group.radio-button value=option.optionGuid label=option.description 
            onChecked=(action attrs.onSelectOption option) data-element=(concat "social-health-option-" index)}}
    {{/each}}
{{/radio-button-group}}
